{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "moduleResolution": "node",  
    "lib": [
      "es2015",
      "dom",
    ],
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "src/",
    "plugins": [
      {
        "transform": "@pigly/transformer"
      },
    ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
  ],
}